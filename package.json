{
  "name": "COMMONERS",
  "version": "0.0.0",
  "description": "A template COMMONERS applications.",
  "main": "./dist/.commoners/main/index.js",
  "private": true,
  "type": "module",
  "workspaces": [
    "src/**"
  ],
  "scripts": {
    "start": "commoners --desktop",
    "dev": "commoners",
    "services": "commoners --services",
    "service:node": "commoners --service node",
    "service:python": "commoners --service python",

    "build": "commoners build",
    "build:frontend": "commoners build --frontend",
    "build:services": "commoners build --services",
    "build:node": "cd src/services/node && npm run build"
  },
  "dependencies": {
    "@capacitor-community/bluetooth-le": "^3.0.1",
  },
  "devDependencies": {
    "@capacitor/assets": "^2.0.4",
    "@capacitor/cli": "^5.3.0",
    "@capacitor/core": "^5.3.0",
    "@capacitor/ios": "^5.3.0",
    "@commoners/autoupdate": "file:../commoners/packages/plugins/autoupdate",
    "@commoners/bluetooth": "file:../commoners/packages/plugins/devices/ble",
    "@commoners/serial": "file:../commoners/packages/plugins/devices/serial",
    "commoners":  "file:../commoners"
  }
}
